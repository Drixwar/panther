<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="gear">

 <xacro:macro name="gear" params="name position parent *joint_pose">

  <link name="gear_${position}_Link">
    <inertial>
      <origin xyz="0 0 0.008" rpy="0 0 0" />
      <mass value="0.0111" />
      <inertia ixx="0" ixy="0" ixz="0"
        iyy="0" iyz="0"
        izz="0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="${path_meshes}/track/gear_link.STL" />
      </geometry>
      <material name="DarkGrey" />
    </visual>
  </link>
  <joint name="gear_${position}_joint" type="continuous">
    <xacro:insert_block name="joint_pose"/>
    <parent link="track_${position}_link" />
    <child link="gear_${position}_Link" />
    <axis xyz="0 0 -1" />
    <!-- Passive sprocket rotate automatically according to the status of the active one -->
    <mimic joint="${name}" multiplier="${sprocket_teeth/gear_teeth}" offset="0"/>
  </joint>

  </xacro:macro>

</robot>
